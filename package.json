  "author": {
    "name": "Steve King",
    "email": "steve@mydev.co"
  },
  "contributors": [
    {
      "name": "Steve King",
      "email": "steve@mydev.co"
    },
    {
      "name": "Aureliano Bergese",
      "email": "onailerua@hotmail.coom"
    }
  ],
  "dependencies": {
    "mkdirp": "^3.0.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@kwsites/file-exists": "^1.1.1",
    "@swc/core": "^1.15.4",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.1",
    "jest": "^30.2.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "properties",
    "ini",
    "parser"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/steveukx/properties"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:defs": "tsc -p tsconfig.release.json --outDir dist",
    "build:compile": "tsc -p tsconfig.build.json",
    "build": "yarn build:defs && yarn build:compile",
    "clean": "git clean -fxd coverage dist",
    "prepare": "npm run build",
    "preversion": "npm test",
    "postversion": "npm publish && git push && git push --tags",
    "test": "jest --coverage"
  },
  "funding": {
